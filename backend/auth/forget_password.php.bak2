  <script>
    // FarsÃ§a: Ù…ØªØºÛŒØ± Ø¨Ø±Ø§ÛŒ Ù†Ú¯Ù‡Ø¯Ø§Ø±ÛŒ ØªØ¨ ÙØ¹Ø§Ù„ ÙØ¹Ù„ÛŒ.
    // TÃ¼rkÃ§e: Mevcut aktif sekmeyi tutan deÄŸiÅŸken.
    // English: Variable to hold the current active tab.
    let currentTab = 'email';

    // FarsÃ§a: ØªØ§Ø¨Ø¹ Ø¨Ø±Ø§ÛŒ ØªØºÛŒÛŒØ± ØªØ¨ Ø¨ÛŒÙ† Ø§ÛŒÙ…ÛŒÙ„ Ùˆ ØªÙ„ÙÙ†.
    // TÃ¼rkÃ§e: E-posta ve telefon sekmeleri arasÄ±nda geÃ§iÅŸ yapmak iÃ§in fonksiyon.
    // English: Function to switch tabs between email and phone.
    function switchTab(tab) {
      currentTab = tab;

      // Update tab buttons
      const emailTab = document.getElementById('emailTab');
      const phoneTab = document.getElementById('phoneTab');

      if (tab === 'email') {
        emailTab.className = 'flex-1 py-3 px-4 rounded-l-lg font-bold transition-all duration-300 tab-active';
        phoneTab.className = 'flex-1 py-3 px-4 rounded-r-lg font-bold transition-all duration-300 tab-inactive';

        // Show email content, hide phone content
        document.getElementById('emailContent').classList.remove('hidden');
        document.getElementById('phoneContent').classList.add('hidden');

        // Update form
        document.getElementById('emailInput').required = true;
        document.getElementById('phoneInput').required = false;

        // Update submit button text
        document.getElementById('submitBtn').innerHTML = '<i class="fas fa-paper-plane mr-2"></i>SÄ±fÄ±rlama BaÄŸlantÄ±sÄ± GÃ¶nder';
      } else {
        phoneTab.className = 'flex-1 py-3 px-4 rounded-r-lg font-bold transition-all duration-300 tab-active';
        emailTab.className = 'flex-1 py-3 px-4 rounded-l-lg font-bold transition-all duration-300 tab-inactive';

        // Show phone content, hide email content
        document.getElementById('phoneContent').classList.remove('hidden');
        document.getElementById('emailContent').classList.add('hidden');

        // Update form
        document.getElementById('phoneInput').required = true;
        document.getElementById('emailInput').required = false;

        // Update submit button text
        document.getElementById('submitBtn').innerHTML = '<i class="fas fa-sms mr-2"></i>DoÄŸrulama Kodu GÃ¶nder';
      }
    }

    // Form submission
    // FarsÃ§a: Ù…Ø¯ÛŒØ±ÛŒØª Ø§Ø±Ø³Ø§Ù„ ÙØ±Ù….
    // TÃ¼rkÃ§e: Form gÃ¶nderimini yÃ¶netir.
    // English: Handles form submission.
    document.getElementById('resetForm').addEventListener('submit', function(e) {
      e.preventDefault();

      const submitBtn = document.getElementById('submitBtn');
      const originalText = submitBtn.innerHTML;

      // Show loading state
      submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>GÃ¶nderiliyor...';
      submitBtn.disabled = true;

      // Simulate API call
      // FarsÃ§a: Ø´Ø¨ÛŒÙ‡â€ŒØ³Ø§Ø²ÛŒ ØªÙ…Ø§Ø³ API Ø¨Ø§ ØªØ§Ø®ÛŒØ± 2 Ø«Ø§Ù†ÛŒÙ‡.
      // TÃ¼rkÃ§e: 2 saniye gecikmeyle API Ã§aÄŸrÄ±sÄ±nÄ± simÃ¼le eder.
      // English: Simulates an API call with a 2-second delay.
      setTimeout(() => {
        showMessage('success', currentTab === 'email'
          ? 'SÄ±fÄ±rlama baÄŸlantÄ±sÄ± e-posta adresinize gÃ¶nderildi. LÃ¼tfen gelen kutunuzu kontrol edin.'
          : 'DoÄŸrulama kodu telefon numaranÄ±za SMS olarak gÃ¶nderildi.');

        // Reset button
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
      }, 2000);
    });

    // FarsÃ§a: ØªØ§Ø¨Ø¹ Ø¨Ø±Ø§ÛŒ Ù†Ù…Ø§ÛŒØ´ Ù¾ÛŒØ§Ù…â€ŒÙ‡Ø§ÛŒ Ù…ÙˆÙÙ‚ÛŒØª ÛŒØ§ Ø®Ø·Ø§.
    // TÃ¼rkÃ§e: BaÅŸarÄ± veya hata mesajlarÄ±nÄ± gÃ¶stermek iÃ§in fonksiyon.
    // English: Function to display success or error messages.
    function showMessage(type, message) {
      const messageContainer = document.getElementById('messageContainer');
      const successMessage = document.getElementById('successMessage');
      const errorMessage = document.getElementById('errorMessage');
      const successText = document.getElementById('successText');
      const errorText = document.getElementById('errorText');

      // Hide all messages
      successMessage.classList.add('hidden');
      errorMessage.classList.add('hidden');
      messageContainer.classList.add('hidden');

      if (type === 'success') {
        successText.textContent = message;
        successMessage.classList.remove('hidden');
        messageContainer.classList.remove('hidden');
      } else {
        errorText.textContent = message;
        errorMessage.classList.remove('hidden');
        messageContainer.classList.remove('hidden');
      }
    }

    // Add focus animations
    // FarsÃ§a: Ø§Ø¶Ø§ÙÙ‡ Ú©Ø±Ø¯Ù† Ø§Ù†ÛŒÙ…ÛŒØ´Ù†â€ŒÙ‡Ø§ÛŒ ÙÙˆÚ©ÙˆØ³ Ø¨Ù‡ ÙÛŒÙ„Ø¯Ù‡Ø§ÛŒ ÙˆØ±ÙˆØ¯ÛŒ.
    // TÃ¼rkÃ§e: GiriÅŸ alanlarÄ±na odaklanma animasyonlarÄ± ekler.
    // English: Adds focus animations to input fields.
    document.querySelectorAll('input').forEach(input => {
      input.addEventListener('focus', function() {
        this.style.transform = 'scale(1.02)';
        this.style.boxShadow = '0 0 20px rgba(102, 126, 234, 0.3)';
      });

      input.addEventListener('blur', function() {
        this.style.transform = 'scale(1)';
        this.style.boxShadow = 'none';
      });
    });
  </script>

